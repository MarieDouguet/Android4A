<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.esiea.android4a">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".injection.EsieaApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher_round"
        android:label="Pokedex"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".presentation.main.AuthentificationActivity"></activity>
        <activity android:name=".presentation.main.DetailPokemonActivity" />
        <activity android:name=".presentation.recyclerView.PokemonListActivity" />
        <activity
            android:name=".presentation.main.SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.createAccount.CreateAccountActivity" />
        <activity android:name=".presentation.login.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>